{
  "name": "@preact-hooks/event",
  "version": "1.0.2",
  "description": "A custom Preact Hook that provides a declarative useEventListener.",
  "main": "dist/event.js",
  "module": "dist/event.mjs",
  "browser": "dist/event.umd.js",
  "types": "types/index.d.ts",
  "license": "MIT",
  "author": "Rahim Alwer <rahim_alwer@hotmail.com>",
  "engines": {
    "node": ">= 8"
  },
  "homepage": "https://github.com/mihar-22/preact-hooks-event#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/mihar-22/preact-hooks-event"
  },
  "bugs": {
    "url": "https://github.com/mihar-22/preact-hooks-event/issues"
  },
  "keywords": [
    "event",
    "event-listener",
    "preact-hooks",
    "preact",
    "hooks"
  ],
  "files": [
    "dist",
    "types/index.d.ts"
  ],
  "scripts": {
    "toc": "doctoc README.md",
    "lint": "standard --parser babel-eslint --fix --env jest",
    "build": "microbundle src/index.js --name useEventListener --sourcemap false --compress",
    "clean": "rimraf dist",
    "test": "jest src/__tests__",
    "test:watch": "yarn test --watch",
    "test:update": "yarn test --updateSnapshot --coverage",
    "setup": "yarn && yarn validate",
    "validate": "yarn lint && yarn test && yarn clean && yarn build",
    "release": "yarn validate && standard-version"
  },
  "peerDependencies": {
    "preact": ">=10 || ^10.0.0-alpha.0 || ^10.0.0-beta.0"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.6.2",
    "@babel/plugin-transform-react-jsx": "^7.3.0",
    "@babel/preset-env": "^7.6.2",
    "@types/jest": "^24.0.18",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "doctoc": "^1.4.0",
    "jest": "^24.9.0",
    "microbundle": "^0.11.0",
    "preact": "^10.0.0-rc.3",
    "preact-testing-library-next": "^1.1.7",
    "rimraf": "^3.0.0",
    "standard": "^14.3.1",
    "standard-version": "^7.0.0"
  },
  "mangle": {
    "regex": "^_"
  },
  "jest": {
    "moduleNameMapper": {
      "^react$": "preact/compat",
      "^react-dom$": "preact/compat"
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
